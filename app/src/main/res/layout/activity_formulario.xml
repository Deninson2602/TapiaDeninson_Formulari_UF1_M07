<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/lblEtiqueta"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/morado"
        android:text="@string/text_exemple"
        android:textColor="@color/blanc"
        android:textSize="20sp"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="italic" />

    <EditText android:id="@+id/txtBasic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic__nombre"
        android:hint="Nombre: "
        android:inputType="text" />

    <EditText android:id="@+id/txtBasic2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic__nombre"
        android:hint="Apellido: "
        android:inputType="text" />

    <EditText
        android:id="@+id/TextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic__telefono"
        android:hint="TelÃ©fono: "
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/TextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic__email"
        android:hint="Correo: "
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textoppc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15dp" />

</LinearLayout>